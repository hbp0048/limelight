<% @title = @avatar.name %>

<div class="page-header">
  <h1>
    <%= @avatar.name %>
    <small class="pull-right">
      <span class="btn-group">
        <%= link_to 'Edit', edit_avatar_path(@avatar), :class => "btn btn-default" %>
        <%= link_to 'Delete', @avatar, :method => :delete, :data => { confirm: "Are you sure?" }, :class => "btn btn-danger" %>
      </span>
    </small>
    <br>
    <small>Avatar</small>
  </h1>
</div>

<%= image_tag "/uploads/#{@avatar.medium.filename}", :alt => "#{@avatar.name}", :class => 'col-lg-4 col-lg-offset-4 img-rounded img-responsive' %>

<div class="row">
  <div class="col-lg-4 col-sm-12">
      <%= render 'stages' %>
  </div>
</div>

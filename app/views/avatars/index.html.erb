<% @title = 'Avatars' %>

<div class="page-header">
  <h1>
    Avatars
    <small class="pull-right">
      <span class="btn-group">
        <%= link_to 'Create', new_avatar_path, :class => "btn btn-primary" %>
      </span>
    </small>
  </h1>
  </h1>
</div>

<table class="table table-striped">
  <% @avatars.each do |a| %>
    <tr>
      <td>
        <%= link_to a.name, a %>
      </td>
      <td>
        <span class="btn-group pull-right">
          <%= link_to 'Edit', edit_avatar_path(a), :class => "btn btn-default" %>
          <%= link_to 'Delete', a, :method => :delete, :data => { confirm: "Are you sure?" }, :class => "btn btn-danger" %>
        </span>
      </td>
    </tr>
  <% end %>
</table>
